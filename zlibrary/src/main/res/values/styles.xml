<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShadowDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:actionModeBackground">@color/f7</item>
    </style>

    <style name="NoShadowDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialogAnimRight" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_right</item>
        <item name="android:windowExitAnimation">@anim/out_to_right</item>
    </style>

    <style name="dialogAnimBottom" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_to_bottom</item>
    </style>

    <style name="dialogAlpha" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_alpha</item>
        <item name="android:windowExitAnimation">@anim/out_alpha</item>
    </style>





</resources>